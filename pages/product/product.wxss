.container {
  padding: 20rpx;
}

.search-container {
  display: flex;
  align-items: center;
  background-color: #f0f0f0;
  border-radius: 35rpx;
  padding: 0 280rpx;
  height: 68rpx;
  font-size: 30rpx;
}

.tab-container {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 10rpx;
}

.tab-item,
.price-tab {
  padding: 10rpx 20rpx;
  cursor: pointer;
}

.sort-arrows {
  width: 20rpx;
  height: 26rpx;
  margin-left: 8rpx;
  position: relative;
  display: inline-block;
}

.arrow-up,
.arrow-down {
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  position: absolute;
}

.arrow-up {
  border-bottom: 10rpx solid gray;
  top: 0;
}

.arrow-down {
  border-top: 10rpx solid gray;
  bottom: 0;
}

.active {
  color: red;
}

.product-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: -10rpx;
  background-color: #fff;
  margin-top: 10rpx;

}

.product-navigator {
    background-color: transparent;
}

.product-item {
  border-radius: 15rpx;
  width: 44%;
  margin-bottom: 15rpx;
  border: 1rpx solid #ccc;
  border-radius: 15rpx;
  padding: 18rpx;
  text-align: center;
}

.product-item image {
  width: 100%;
  height: 340rpx;
}

.product-info {
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  margin-top: 5rpx;
}

.product-name {
  font-size: 27rpx;
  font-family: Arial, sans-serif;
  color: rgb(20, 20, 20);
}

.product-price {
  color: red;
  margin-top: 6rpx;
  font-size: 27rpx;
}