.container {
    background-color: #fff;
    width: 100%;
}
.store-show {
    justify-content: center; /* 水平居中 */
    align-items: center; /* 垂直居中，若图片不需要垂直居中可省略 */
    display: flex;

}
.store-img {
    width: 100%;

}

.store-name{
    font-size: 38rpx;
    font-weight: bold;
    margin-left: 40rpx;
}
.store-info {
    width: 100%;
    height: 80vh;
    background-color: #f1f7fc;
    padding: 30rpx 0;
    border-radius: 30rpx;
}

.store-details {
    font-size: 30rpx;
    color: #515151;    
    padding: 30rpx 40rpx;
}

.icon{
    width: 30rpx;
    height: 30rpx;
}

.store-time-info {
    display: flex;
    margin-bottom: 30rpx;
    align-items: center;
}

.store-time {
    margin-left: 10rpx;
}

.store-adress-info {
    display: flex;
    align-items: center;
}

.store-adress {
    margin-left: 10rpx;
}

.store-adress-navigation {
    right: 60rpx;
    position: absolute;
    width: 135rpx;
    height: 70rpx;
    background: linear-gradient(to bottom right, #0D47A1, #00BCD4); /* 渐变色背景 */
    border-radius: 10rpx; /* 圆角 */
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 10rpx; /* 图标和文字间距 */
}

.store-adress-navigation-text{
    color: #fff;
}

.contoct-options{
    display: flex;
    padding: 10rpx 10rpx;
}

.contoct-button-consult {
    display: flex;
    align-items: center;
    background-color: #fff;
    border: 1rpx solid #e0e0e0;
    border-radius: 15rpx; /* 添加圆角使边框看起来更柔和 */
    box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1); /* 可添加阴影增强立体感 */
}

  .contoct-button-phone {
    display: flex;
    align-items: center;
    background-color: #fff;
    border: 1rpx solid #e0e0e0;
    border-radius: 15rpx; /* 添加圆角使边框看起来更柔和 */
    box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1); /* 可添加阴影增强立体感 */
    margin-right: 250rpx;
  }
  
  .contoct-button-consult image {
    width: 35rpx;
    height: 35rpx;
    margin-right: 10rpx;
  }
  .contoct-button-phone image {
    width: 35rpx;
    height: 35rpx;
    margin-right: 10rpx;
  }
  
  .contoct-text {
    font-size: 30rpx;
  }

  .store-car {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 30rpx 10rpx;
}

  .store-car-img {
    width: 96%;
    height: 350rpx;
    border-radius: 15rpx;
  }




