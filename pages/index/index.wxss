page {
  background-color: #f0f0f0; 
}
.container {
  padding: 15rpx;
}
.banner-swiper {
  margin-bottom: 20rpx;

}
.banner-swiper image {
  width: 100%;
  border-radius: 15rpx;
}

.category-scroll-container {
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
  justify-content: space -around;
  border-radius: 15rpx;
}

.category-item {
  display: inline-block;
  text-align: center;
  box-sizing: border-box;
  padding: 10px;
  width: 25%; /* 一行5个左右，适当留些间距 */
  margin-bottom: 5px;
}

.category-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.category-item image {
  width: 130rpx;
  height: auto;
  margin-bottom:5rpx;
  border-radius: 15rpx;
}

.category-name {
  margin-top: 5px;
  font-size: 27rpx;
  font-family: Arial, sans-serif;
  color: rgb(20, 20, 20);
}

.recommend-products {
  margin-bottom: 20rpx;
}

.recommend-section-title {
  font-size:35rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  padding: 20rpx;
  margin-top: 50rpx; /* 增加上边距 */
}

.recommend-product-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 10rpx;
  background-color: #fff;

}

.recommend-product-item {
  border-radius: 15rpx;
  width: 43%;
  margin-bottom: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 15rpx;
  padding: 20rpx;
  text-align: center;
}
.recommend-product-item image {
  width: 100%;
  height: 320rpx;
}

.recommend-product-info {
  display: flex;
  flex-direction: column;
  margin-top: -10rpx;
}

.recommend-product-name {
  font-size: 28rpx;
  font-family: Arial, sans-serif;
  color: rgb(20, 20, 20);
}

.recommend-product-price {
  color: red;
  margin-top: 5rpx;
}