<view class="container">
  <swiper class="banner-swiper" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{banners}}" wx:key="id">
      <swiper-item>
        <image src="{{item.imageUrl}}" mode="widthFix"></image>
      </swiper-item>
    </block>
  </swiper>

  <scroll-view class="category-scroll-container" scroll-x="true" style="white-space: nowrap;">
  <block wx:for="{{categories}}" wx:key="id">
    <view class="category-item">
      <view class="category-content">
        <image src="{{item.imageUrl}}" mode="widthFix"></image>
        <text class="category-name">{{item.categoryName}}</text>
     </view>
    </view>
  </block>
</scroll-view>
  <view class="recommend-products">
    <view class="recommend-section-title">热销推荐</view>
      <view class="recommend-product-list">
        <view class="recommend-product-item" wx:for="{{recommendProducts}}" wx:key="id">
          <image class="recommend-product-img" src="{{item.imageUrl}}" mode="aspectFill"></image>
          <view class="recommend-product-info">
            <text class="recommend-product-name">{{item.productName}}</text>
            <text class="recommend-product-price">¥{{item.productPrice}}</text>
          </view>
        </view>
      </view>
  </view>
</view>