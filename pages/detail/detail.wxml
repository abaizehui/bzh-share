<view class="container">
  <image class="product-img" src="{{productInfo.imageUrl}}" />
  <view class="product-info">
    <text class="product-name">{{productInfo.productName}}</text>
    <text class="product-price">￥{{productInfo.productPrice}}</text>
    <view class="select-info">
      <view class="select-item">
        <text>参数</text>
        <text>{{productInfo.paramDesc}}</text>
      </view>
    </view>

    <view class="action-buttons">
      <button class="add-cart" bindtap="addToCart">加入购物车</button>
      <button class="buy-now" bindtap="buyNow">立即购买</button>
    </view>
  </view>
</view>