  }

  button[plain]{
      border: 0;
  }
  
  .share-button image {
    width: 45rpx;
  }
  
  .share-text {
    font-size: 23rpx;
  }
  


  .contoct-button {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: transparent; /* 背景透明 */
    margin-right: 10rpx;
  }
  
  .contoct-button image {
    width: 45rpx;
  }
  
  .contoct-text {
    font-size: 23rpx;
  }

  .reserve-button {
    display: flex;
    justify-content: center;
