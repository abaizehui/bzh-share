.container {
    display: flex;
    flex-direction: column;
 
    background-color: #f5f5f5;


  }
  
  .product-img {
    width: 100%;
    height: 700rpx;
    object-fit: contain;
  }
  
  .product-info {
    display: flex;
    flex-direction: column;
    margin: 25rpx;
    padding: 20rpx 40rpx;
    border-radius: 20rpx;
    background-color: #fff;
  }
  
  .product-name {
    font-size: 35rpx;
    font-family: Arial, sans-serif;
    color: rgb(20, 20, 20);
  }
  
  .product-price {
    color: red;
    margin-top: 15rpx;
    font-size: 37rpx;
  }

    
  .product-parameter-info {


    margin: 35rpx;
    padding: 20rpx 40rpx;
    border-radius: 20rpx;
    background-color: #fff;
  }
 
  .parameter-box {
    display: flex;
    align-items: center;
    border: 1px solid #ccc;
    border-radius: 5rpx;
    padding: 15rpx;
    margin-bottom: 20rpx;
  }
  .parameter-label {
    width: 80rpx;
  }
  .parameter-content {
    flex: 1;
  }
  .dropdown-container {
    background-color: #fff;
    border: 1px solid #ccc;
    border-top: none;
    border-radius: 0 0 5rpx 5rpx;
  }
  .dropdown-item {
    display: flex;
    justify-content: space - between;
    padding: 15rpx;
    border-bottom: 1px solid #ccc;
  }
  .item-label {
    font-weight: normal;
  }
  .item-value {
    text-align: right;
  }
