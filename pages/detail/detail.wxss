.container {
    background-color: #f5f5f5;
  }
  
  .product-img {
    width: 100%;
    height: 700rpx;
    object-fit: contain;
  }
  
  .product-info {
    display: flex;
    flex-direction: column;
    margin: 25rpx;
    padding: 20rpx 40rpx;
    border-radius: 20rpx;
    background-color: #fff;
  }
  
  .product-name {
    font-size: 35rpx;
    font-family: Arial, sans-serif;
    color: rgb(20, 20, 20);
  }
  
  .product-price {
    color: red;
    margin-top: 15rpx;
    font-size: 37rpx;
  }

    
  .product-parameter-info {
    margin: 15rpx;
    padding: 10rpx 40rpx;
    border-radius: 20rpx;
    background-color: #fff;
  }
 


/* 触发按钮样式 */
.btn {
    color: #000;
    border-radius: 8rpx;
    flex-wrap:wrap;
  }

  .btn-param {
    display :flex;
    white-space: nowrap; /* 文本不换行 */
    overflow: hidden; /* 溢出内容隐藏 */
    text-overflow: ellipsis; /* 溢出部分显示省略号 */
    margin-right: 10px;
    width: 500rpx;
  }

  .btn-param-item {
    flex: 1;
    width: auto;
  }
  
  /* 遮罩层 */
  .mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 999;
  }
  
  /* 弹窗容器 */
  .modal-container {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
    transition: all 0.3s ease;
  }
  
  /* 弹窗内容 */
  .modal-content {
    background: white;
    border-radius: 24rpx 24rpx 0 0;
    padding: 30rpx;
    transform: translateY(0);
    animation: slideUp 0.3s;
  }
  
  /* 选项样式 */
  .modal-item {
    padding: 32rpx;
    text-align: center;
    border-bottom: 1rpx solid #eee;
  }
  
  .modal-item:last-child {
    border-bottom: none;
    margin-top: 20rpx;
    color: #666;
  }
  
  /* 动画 */
  @keyframes slideUp {
    from {
      transform: translateY(100%);
    }
    to {
      transform: translateY(0);
    }
  }

  .item-label {
      color: #666;
  }




  .info-item {
    margin-bottom: 10px;
    display: flex;
    justify-content: space-between;
  }
 
  .product-detail {
    padding: 10px;
}



.detail-title {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 10px;
    text-align: center;

}

.detail-item {
    text-align: center;
    font-size: 0; /* 去除文本间隙 */
}

.detail-item image {
    width: 100%;
}

