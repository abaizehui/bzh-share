    height: 40rpx;
  }


  /* 遮罩层 */
.config-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 999;
}
  
  /* 弹窗容器 */
.config-modal-container {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
    transition: all 0.3s ease;
}
  
  /* 弹窗内容 */
.config-modal-content {
    background: white;
    border-radius: 24rpx 24rpx 0 0;
    padding: 50rpx;
    transform: translateY(0);
    animation: slideUp 0.2s;

}


.config-modal-item {
    margin-bottom: 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }
  .config-item-label {
    color: #666;
}
.config-item-value {
    width: 70%;
    margin-right: 10rpx;
}

  
  /* 选项样式 */
.modal-item-cancel {
    padding: 32rpx;
    text-align: center;
    border-bottom: 1rpx solid #eee;
}
  
.modal-item-cancel:last-child {
    border-bottom: none;
    margin-top: 20rpx;
    color: #666;
}
  
  /* 动画 */
  @keyframes slideUp {
    from {
      transform: translateY(100%);
    }
    to {
      transform: translateY(0);
    }
  }

.product-detail {
    margin-top: 20rpx;
}

.product-detail-item {
    text-align: center;
    font-size: 0; /* 去除文本间隙 */
}

.product-detail-item image {
    width: 100%;
}

.product-blank {
    width: 100%;
    height: 150rpx;
}
.product-bar {
    display: flex;
    bottom: 0;
    position: fixed;
    justify-content: space-around;
    padding: 30rpx 20rpx;
    background-color: #fff;
    width: 100%;
  }
  
  .share-button {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: transparent; /* 背景透明 */
