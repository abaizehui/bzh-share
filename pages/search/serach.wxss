.search-page {
  background-color: #f5f5f5;
  padding: 20rpx;
}
.search-container {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  height: 80rpx;
  padding: 0 20rpx;
}
.search-input-box {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #fff;
  height: 60rpx;
  border-radius: 30rpx;
  padding: 0 10rpx;
}
.search-input {
  flex: 1;
  height: 50rpx;
  border: none;
  background: transparent;
  font-size: 32rpx;
}
.clear-button {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search-button {
  width: 70rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: rgb(82, 80, 80);
  border-radius: 10rpx;
  font-size: 32rpx;
  margin-left: 10rpx;
}

.history-search-container {
  background-color: #fff;
  padding: 20rpx;
}
.history-search-title {
  font-size: 30rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.clear-history-button {
  float: right;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.history-search-items {
  display: flex;
  flex-wrap: wrap;
}
.history-item {
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  padding: 10rpx 20rpx;
  border: 1rpx solid #ccc;
  border-radius: 20rpx;
  font-size: 30rpx;
}


.serach-products {
  margin-bottom: 20rpx;
}

.serach-section-title {
  font-size:35rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  padding: 20rpx;
  margin-top: 40rpx; /* 增加上边距 */
}

.serach-product-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 10rpx;
  background-color: #fff;

}

.serach-product-item {
  border-radius: 15rpx;
  width: 43%;
  margin-bottom: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 15rpx;
  padding: 20rpx;
  text-align: center;
}
.serach-product-item image {
  width: 100%;
  height: 320rpx;
}

.serach-product-info {
  display: flex;
  flex-direction: column;
  margin-top: 5rpx;
}

.serach-product-name {
  font-size: 27rpx;
  font-family: Arial, sans-serif;
  color: rgb(20, 20, 20);
}

.serach-product-price {
  color: red;
  margin-top: 5rpx;
  font-size: 27rpx;
}